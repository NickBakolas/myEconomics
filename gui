import tkinter as tk
from tkinter import messagebox, Menu

# Συνάρτηση για την επιλογή του μενού
def testing():
    messagebox.showinfo("Επιλογή", "Επιλέξατε μια επιλογή από το μενού!")

# Δημιουργία του κύριου παραθύρου
root = tk.Tk()
root.title("Personal Financial")

root.minsize(800, 400)

# Δημιουργία του μενού
menu = Menu(root)
root.config(menu=menu)

# Δημιουργία του υπομενού για τους μήνες
monthmenu = Menu(menu, tearoff=0)
menu.add_cascade(label='Μήνας', menu=monthmenu)
months = ['Ιανουάριος', 'Φεβρουάριος', 'Μάρτιος', 'Απρίλιος', 'Μάιος',
          'Ιούνιος', 'Ιούλιος', 'Άυγουστος', 'Σεπτέμβριος',
          'Οκτώβριος', 'Νοέμβριος', 'Δεκέμβριος']
for month in months:
    monthmenu.add_command(label=month, command=testing)

# Δημιουργία του υπομενού για τα έτη
yearmenu = Menu(menu, tearoff=0)
menu.add_cascade(label='Έτος', menu=yearmenu)
years = ['2025', '2026']
for year in years:
    yearmenu.add_command(label=year, command=testing)

# Δημιουργία του υπομενού για έσοδα-έξοδα
incomemenu = Menu(menu, tearoff=0)
menu.add_cascade(label ='Καταχώρηση εσόδων-εξόδων',menu=incomemenu)
incomemenu.add_command(label = 'Καταχωρήστε έσοδο', command=testing)
incomemenu.add_command(label = 'Καταχωρήστε έξοδο', command=testing)

# Δημιουργία ενός πλαισίου για το layout
frame = tk.Frame(root)
frame.pack(expand=True, fill='both')

# Δημιουργία των τεσσάρων widget
widget1 = tk.Label(frame, text="Widget 1", bg="red")
widget2 = tk.Label(frame, text="Widget 2", bg="green")
widget3 = tk.Label(frame, text="Widget 3", bg="blue")
widget4 = tk.Label(frame, text="Widget 4", bg="yellow")

# Τοποθέτηση των widget στα τεταρτημόρια
widget1.grid(row=0, column=0, sticky="nsew")
widget2.grid(row=0, column=1, sticky="nsew")
widget3.grid(row=1, column=0, sticky="nsew")
widget4.grid(row=1, column=1, sticky="nsew")

# Ρύθμιση των αναλογιών των γραμμών και των στηλών
frame.grid_rowconfigure(0, weight=1)
frame.grid_rowconfigure(1, weight=1)
frame.grid_columnconfigure(0, weight=1)
frame.grid_columnconfigure(1, weight=1)

# Εκκίνηση του κύριου βρόχου
root.mainloop()
